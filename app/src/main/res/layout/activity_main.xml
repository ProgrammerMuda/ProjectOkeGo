<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:id="@+id/nnestedScrollView"
    android:background="#FFFFFF"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:src="@drawable/okelogo" />

        <TextView
            android:textColor="#000"
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamat Datang di OKEGO"
            android:textSize="20sp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">









                <EditText
                    android:id="@+id/textInputEditTextPhoneee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_phone"
                    android:inputType="number"
                    android:backgroundTint="#ff4887"
                    android:maxLines="1"
                    />














            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/textInputEditTextPassworddd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_password"
                android:backgroundTint="#ff4887"
                android:inputType="textPassword"
                android:maxLines="1"
                />



        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="#ff4887"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LOGIN"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

<!--        <androidx.appcompat.widget.AppCompatButton-->
<!--            android:id="@+id/appCompatButtonLogin"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="30dp"-->
<!--            android:background="#ff4887"-->
<!--            android:textColor="#fff"-->
<!--            android:text="@string/text_login"/>-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewLinkRegister"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="#ff4887"
            android:text="@string/text_not_member"
            android:textSize="16dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>











</RelativeLayout>